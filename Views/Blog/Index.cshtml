@using PagedList;
@using PagedList.Mvc;

@*@model IEnumerable<DreamTeamBlogZ.Models.Database.Blog>*@
@model IPagedList<DreamTeamBlogZ.Models.Database.Blog>



@{
    ViewBag.Title = "Index";
}
<br />
<br /><br /><br />
<h2>Index</h2>
<br />

<p>
    @Html.ActionLink("Mina bloggar", "ShowMyBlogsInList", "Blog", null, new { @class = "btn btn-warning btn-md" })
    &nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Alla bloggar", "ShowAllBlogsInList", "Blog", null, new { @class = "btn btn-primary btn-md" })
    &nbsp;&nbsp;&nbsp;

    @Html.ActionLink("Skapa ny blogg", "CreateNewBlog", "Blog", new { @class = "btn btn-primary btn-sm" })
    &nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Create New", "CreateNewBlog")
</p>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@
                Blog Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Body)*@
                Description
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Created)*@

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.ActionLink("Ändra i blog", "EditBlog", new { id = item.Id }, new { @class = "btn btn-primary btn-md" }) |
                    @Html.ActionLink("Info om blog", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-md" }) |
                    @Html.ActionLink("Ta bort blog", "DeleteBlog", new { id = item.Id }, new { @class = "btn btn-primary btn-md" })
                </td>
            </tr>
        }
    </table>

}


